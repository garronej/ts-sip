{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es5",
            "es2015",
            "dom"
        ],
        "declaration": true,
        "outDir": "./dist",
        "strictNullChecks": true,
        "sourceMap": false,
        "newLine": "LF",
        "downlevelIteration": false,
        "noUnusedLocals": true, 
        "noUnusedParameters": false, 
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true
    },
    "filesGlob": [
        "./src/**/*.ts"
    ]
}
